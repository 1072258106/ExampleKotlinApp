<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/listItemBackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingLeft="6dp"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:paddingStart="6dp">

    <TextView
        android:id="@+id/item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="4dp"
        android:maxLines="1"
        android:textSize="16sp"
        tools:text="Status"
        android:background="@drawable/rounded_border"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/item_id"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="18sp"
        tools:text="ID"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_toStartOf="@id/item_status"
        android:layout_toLeftOf="@id/item_status"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/item_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_id"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:textColor="?android:attr/textColorPrimary"
        android:maxLines="1"
        android:textSize="16sp"
        tools:text="Contact" />

    <TextView
        android:id="@+id/item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_contact"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:textColor="?android:attr/textColorPrimary"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Category" />

    <TextView
        android:id="@+id/item_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_category"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:textColor="?android:attr/textColorPrimary"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        tools:text="Account" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_account"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:textColor="?android:attr/textColorPrimary"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        tools:text="Date" />
</RelativeLayout>
